<div class="sidenav">
    <div class="profile">
        <% if (user.image && user.image.contentType) { %>

            <!-- <img src="https://imdezcode.files.wordpress.com/2020/02/imdezcode-logo.png" alt="Profile Image"
            width="100" height="100"> -->
            <img class="w-100"
                src="data:<%= user.image.contentType %>;base64,<%= user.image.data.toString('base64')%>"
                width="100" height="100" />
            <% } else { %>
                <img src="../../user/img/user-1.jpg" alt="Profile Image" width="100" height="100">

                <% } %>
                    <div class="details">
                        <div class="name">
                            <%= user.userName %>
                        </div>
                    </div>
    </div>
    <div class="sidenav-links">
        <button class="btn btn-primary btn-block mt-3" type="submit">
            Change Image
        </button>
        <a href="/profile" class="btn btn-success btn-block mt-3">Profile</a>
        <a href="/profile/address" class="btn btn-success btn-block mt-3">My Address</a>
        <a href="/order" class="btn btn-success btn-block mt-3">My Orders</a>
        <a href="/newPassword" class="btn btn-success btn-block mt-3">Change Password</a>
        <a href="/wallet" class="btn btn-success btn-block mt-3">Wallet</a>
    </div>
</div>