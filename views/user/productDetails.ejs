<%- include('../partials/user/shortHeader') %>


<style>
    .imgof{
        /* background: rgb(202, 233, 247); */
        display: flex;
        align-items: baseline;
        justify-content: center;
        height: 100vh;
    }

    .image {
        position: relative;
        width: 600px;
        height: 400px;
        overflow: hidden;
        /* border: 5px solid #fff; */
        /* box-shadow: -1px 5px; */
    }
    .image img{
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: contain;
        transform: scale(var(--zoom, 1));
        transform-origin: var(--x) var(--y);
        transition: transform 0.3s ease;

    }


    .image:hover{
        --zoom: 3;

    }
</style>


    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">

            <div class="row">
                <div class="imgof col-lg-6 col-md-6 ">
                    <div class="product__details__pic">
                        <div class=" product__details__pic__item slick-slider">

                            <div >
                                <!-- class="item-slick3" -->
                                <div class="image ">
                                    <!-- wrap-pic-w pos-relative -->
                                    <!-- style="min-width: 422px ; display:flex ; align-content: center; justify-content: center;" -->
