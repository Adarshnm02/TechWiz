<%- include('../partials/user/header') %>
<style>
    .pagination-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

    .pagination-container a {
        display: inline-block;
        padding: 8px 12px;
        margin: 0 4px;
        text-decoration: none;
        color: #333;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .pagination-container a.active {
        background-color: #007bff;
        color: white;
        border-color: #007bff;
    }
    .link {
    cursor: pointer;
}

</style>


    <!-- Featured Section Begin -->
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Featured Product</h2>
                    </div>
                    <div class="featured__controls">
                        <ul>
                            <li class="active link" data-filter="*">All</li>
                            <li data-filter=".oranges">Mobile</li>
                            <li data-filter=".fresh-meat">Laptop</li>
                            <li data-filter=".vegetables">Camera</li>
                            <li data-filter=".fastfood">Accessories</li>
                        </ul>
                    </div>
                </div>
            </div>



            <div class="row">


                <% products.forEach(product=> { %>


                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="product__item">

                            <div class="product__item__pic set-bg"  style="display: flex; justify-content: center;">
                                <% if(product.image[0] && product.image[0].contentType && product.image[0].data) { %>

                                    <img onclick="productDetails('<%= product._id %>')" src="data:<%= product.image[0].contentType %>;base64,<%= product.image[0].data.toString('base64')%>"
                                        alt="IMG-PRODUCT" style="height: 260.34px" />

                                    <% } else { %>

                                        <p>No image available</p>

                                        <% } %>
                                            <ul class="product__item__pic__hover">
                                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                                </li>
                                                <li><a onclick="addToCart('<%= product._id %>')"><i
                                                            class="fa fa-shopping-cart"></i></a>
                                                </li>
                                            </ul>
                            </div>
                            <div class="product__item__text link" onclick="productDetails('<%= product._id %>')">
                                <h6><a>
                                        <%= product.product_name %>
                                    </a>
                                </h6>
                                <h6>â‚¹<%= product.price %></h6>
                            </div>
                        </div>
                    </div>

                    <% }); %>

            </div>
        </div>
    </section>
    <!-- Featured Section End -->
    
    <div class="pagination-container">
        <% if (currentPage> 1) { %>
            <a href="/index?page=1">First</a>
            <a href="/index?page=<%= currentPage - 1 %>">Previous</a>
            <% } %>

                <% for (let i=1; i <=totalPages; i++) { %>
                    <a href="/index?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>">
                        <%= i %>
                    </a>
                    <% } %>

                        <% if (currentPage < totalPages) { %>
                            <a href="/index?page=<%= currentPage + 1 %>">Next</a>
                            <a href="/index?page=<%= totalPages %>">Last</a>
                            <% } %>
    </div>



