    <style>
        /* Additional styles for centering the container */
        .centered-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            /* Full viewport height */
        }

        .form-container {
            width: 70%;
            max-width: 500px;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            text-align: center;
        }

        .form-group button {
            display: block;
            margin: 0 auto;
            /* Center align horizontally */
        }
    </style>


</head>



<body>
    <main>
        <section class="login_part section_padding">
            <div class="container">
                <div class="centered-container">
                    <div class="form-container">
                        <div class="login_part_text text-center">
                            <div class="login_part_text_center_iner">
                                <h2>OTP Verification</h2>
                                <p>Verify your email now to proceed.</p>
                            </div>
                        </div>
                        <div class="login_part_form">
                            <div class="login_part_form_iner">
                                <form action="/verification" method="post" novalidate="novalidate">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="OTP" name="OTP"
                                            placeholder="Enter Your OTP">
                                    </div>
                                    <input type="hidden" name="ID" id="userId" value="<%= id %>">
                                    <p>After 5 seconds, this OTP will expire.</p>

                                    <!-- <div class="form-group">
                                        <button type="submit" value="submit" id="resend"
                                            class="btn btn-primary">Verify</button>
                                    </div> -->
                                    <div class="form-group">
                                        <!-- Initially show the Verify button -->
                                        <button type="submit" value="submit" id="verifyButton" class="btn btn-primary">Verify</button>
                                    </div>
                                    
                                    <!-- Add a hidden container for the Resend OTP button -->
                                    <div id="resendContainer" class="form-group" style="display: none;">
                                        <form action=""method="post">
                                            <input type="hidden" name="userId" value="<%= id %>">
                                            <a href="/resendOtp?userId=<%=id %>" style="color: #5e96d3;"  id="resendButton">Resend OTP</a>
                                        </form>
                                    </div>
                                    
                                    

                                    <!-- Error message -->
                                    <% if (typeof message !=="undefined" ) { %>
                                        <p class="mt-3 text-danger">
                                            <%= message %>
                                        </p>
                                        <% } %>
                                            <!-- End error message -->
                                </form>

                                <div id="resendContainer" class="form-group" style="display: none;">
                                    <form action="/resend-otp" method="post">
                                        <input type="hidden" name="userId" value="<%= id %>">
                                        <button type="submit" class="btn btn-secondary" id="resendButton">Resend
                                            OTP</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div id="timer"></div>
                    </div>
                </div>
            </div>
        </section>
    </main>


    

<script>
    // Show the Resend OTP button after 3 seconds
    setTimeout(function () {
        // document.getElementById("verifyButton").style.display = "none";
        document.getElementById("resendContainer").style.display = "block";
    }, 5000);
    

    function resendOtpFun(id) {
        fetch(`/resendOtp?orderId=${id}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
        })
        .then(response => response.json())
        .catch(err => {
            console.log(err.message);
        });
    }
</script>


