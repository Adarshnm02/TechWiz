<%- include('../partials/admin/adminHeader') %>


    <div class="container-fluid">
        <div class="row justify-content-center align-items-center ">
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add Category</h4>
                        <form action="/admin/addCategory" class="forms-sample" method="post"
                            enctype="multipart/form-data" id="category-form">
                            <div class="mb-3">
                                <label for="exampleInputName1" class="form-label">Category Name</label>
                                <input type="text" name="categoryName" class="form-control" id="exampleInputName1"
                                    placeholder="Name" required>
                                <p class="text-danger" id="name-error-display"></p>
                            </div>
                            <div class="mb-3">
                                <label for="exampleTextarea1" class="form-label">Description</label>
                                <textarea name="description" id="exampleTextarea1" class="form-control" rows="4"
                                    required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Image Upload</label>
                                <input type="file" id="image" name="image" class="form-control file-upload-info">
                            </div>
                            <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
                            <% if ( typeof message !== "undefined" ) { %>
                                <p class="text-danger">
                                    <%= message %>
                                </p>
                                <% } %>


                            <div class="text-end">
                                <button type="submit" class="btn btn-primary"
                                    style="margin-right: 30px;">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

  

    <%- include('../partials/admin/adminFooter') %>